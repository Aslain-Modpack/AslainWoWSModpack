<local:RelhaxWindow x:Class="RelhaxModpack.Windows.CreateFTPFolderName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RelhaxModpack.Windows"
        mc:Ignorable="d"
        Title="Create FTP folder name" Height="150" Width="300" LocalizeWindow="False" ApplyToolTips="False" Loaded="RelhaxWindow_Loaded">
    <Window.Resources>
        <Style TargetType="Grid" BasedOn="{StaticResource DarkThemeGrid}"/>
    </Window.Resources>
    <Grid>
        <Button Tag="OKButton" x:Name="OKButton" Content="OK" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="OKButton_Click"/>
        <TextBox Tag="FolderNameTextBox" x:Name="FolderNameTextBox" HorizontalAlignment="Stretch" Height="23" Margin="10,31,10,0" TextWrapping="Wrap" VerticalAlignment="Top" KeyDown="FolderNameTextBox_KeyDown"/>
        <TextBlock x:Name="FolderNameHeaderTextBlock" HorizontalAlignment="Stretch" Margin="10,10,10,0" TextWrapping="Wrap" Text="Enter Folder name" VerticalAlignment="Top"/>
        <TextBlock x:Name="CreatingFolderTextBlock" HorizontalAlignment="Left" Margin="10,0,0,10" TextWrapping="Wrap" Text="Creating Folder..." VerticalAlignment="Bottom" Visibility="Hidden" />
    </Grid>
</local:RelhaxWindow>
